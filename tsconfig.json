{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "./build", 
        "rootDir": "./src",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES6", "DOM"],   
        "strict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["build", "node_modules"] 
}